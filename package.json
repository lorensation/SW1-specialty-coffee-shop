{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/backend run dev",
    "dev:web": "npm --workspace apps/frontend run dev",
    "dev": "concurrently -k -n API,WEB \"npm run dev:api\" \"npm run dev:web\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}